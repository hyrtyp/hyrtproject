<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/full_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/phone_study_child_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@id/phone_study_top"
        android:layout_width="fill_parent"
        android:layout_height="47px"
        android:background="@drawable/phone_study_top_bg" >

        <ImageView
            android:id="@id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:src="@drawable/back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dip"
            android:layout_toRightOf="@id/back_btn"
            android:text="下载管理" 
            style="@style/yangshi_pad_title"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/phone_studyym_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/phone_study_preload_scrollView"
            android:paddingTop="17dip" >

            <ImageView
                android:id="@id/phone_study_preload_loadingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:src="@drawable/phone_study_preload_down_hover" />

            <ImageView
                android:id="@id/phone_study_preload_alreLoadBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:src="@drawable/phone_study_preload_aldown" />
        </LinearLayout>

        <ScrollView
            android:id="@id/phone_study_preload_scrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:paddingTop="1.0px" >

            <LinearLayout
                android:id="@id/phone_study_preload_itemParent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>