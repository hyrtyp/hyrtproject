<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <TextView 
       android:id="@+id/infor_tv_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:singleLine="true"
       android:text="企业监管查询系统"
       android:textSize="20dp"
       android:textColor="#000000"
       android:layout_marginLeft="5dp"
       />
  <TextView 
       android:id="@+id/tv_publisher"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:singleLine="true"
       android:layout_below="@id/infor_tv_title"
       android:textSize="15dp"
       android:text="发布者系统管理员"
       android:layout_alignLeft="@id/infor_tv_title"/>
   <TextView 
       android:id="@+id/infor_tv_time"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_marginRight="10dp"
       android:textSize="15dp"
       android:singleLine="true"
       android:layout_marginLeft="10dp"
       android:gravity="right"
       android:layout_alignTop="@id/tv_publisher"
       android:layout_toRightOf="@id/tv_publisher"
       android:text="发布日期:2012-10-08"/>
    
</RelativeLayout>
