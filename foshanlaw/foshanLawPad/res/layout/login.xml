<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/abackground">
	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true">
		<ImageView
			android:id="@+id/login"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:background="@drawable/logo"
			android:layout_centerHorizontal="true" />
		<RelativeLayout
			android:paddingLeft="40dip"
			android:paddingRight="40dip"
			android:id="@+id/login_layout1"
			android:layout_centerHorizontal="true"
			android:layout_width="wrap_content"
			android:layout_below="@+id/login"
			android:layout_marginTop="30dip"
			android:layout_height="wrap_content">
			<TextView
				android:layout_centerVertical="true"
				android:id="@+id/loginNameText"
				android:layout_width="wrap_content"
				android:textColor="#FFFFFF"
				android:textSize="20sp"
				android:layout_height="wrap_content"
				android:text="用户名" />
			<EditText
				android:hint="请输入用户名"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dip"
				android:id="@+id/main_loginName"
				android:text="admin"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/loginNameText"></EditText>
		</RelativeLayout>
		<RelativeLayout
			android:paddingLeft="40dip"
			android:paddingRight="40dip"
			android:id="@+id/login_layout2"
			android:layout_centerHorizontal="true"
			android:layout_width="wrap_content"
			android:layout_below="@+id/login_layout1"
			android:layout_marginTop="30dip"
			android:layout_height="wrap_content">
			<TextView
				android:layout_centerVertical="true"
				android:layout_below="@+id/loginNameText"
				android:textColor="#FFFFFF"
				android:textSize="20sp"
				android:id="@+id/loginPassText"
				android:layout_height="wrap_content"
				android:text="密    码"
				android:layout_width="wrap_content"></TextView>
			<EditText
				android:hint="请输入密码"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dip"
				android:layout_toRightOf="@+id/loginPassText"
				android:id="@+id/main_loginPass"
				android:text="admin"
				android:password="true"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"></EditText>
		</RelativeLayout>
		<RelativeLayout
			android:paddingLeft="40dip"
			android:paddingRight="40dip"
			android:paddingBottom="30dip"
			android:layout_centerHorizontal="true"
			android:layout_width="wrap_content"
			android:layout_below="@+id/login_layout2"
			android:layout_marginTop="30dip"
			android:layout_height="wrap_content">
			<TextView
				android:textColor="#FFFFFF"
				android:textSize="20sp"
				android:layout_height="wrap_content"
				android:text="隐藏的"
				android:id="@+id/lgoin_textview"
				android:visibility="invisible"
				android:layout_width="wrap_content"></TextView>
			<EditText
				android:visibility="invisible"
				android:layout_marginLeft="20dip"
				android:layout_toRightOf="@+id/lgoin_textview"
				android:background="@drawable/text"
				android:id="@+id/main_loginPass"
				android:password="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"></EditText>
			<Button
				android:background="@drawable/login_bth"
				android:id="@+id/main_loginSubmit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignLeft="@+id/main_loginPass"></Button>
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>