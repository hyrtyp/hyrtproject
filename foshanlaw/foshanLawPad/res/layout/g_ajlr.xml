<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
         style="@style/yangshi_title_parent" >

        <TextView
            android:id="@+id/top_text"
            style="@style/yangshi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="案件录入" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/next"
        android:layout_below="@+id/top"
         style="@style/query_scroll" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 style="@style/query_edit_parent">

                <TextView
                    android:id="@+id/loginServerText"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="案件名称："
                     style="@style/query_edit_title" >
                </TextView>

                <EditText
                    android:id="@+id/g_ajmc"
                    android:layout_width="fill_parent"
                     style="@style/query_edit"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/query_edit_parent" >

                <TextView
                    android:id="@+id/loginServerText"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="案件来源："
                    style="@style/query_edit_title" >
                </TextView>

                <EditText
                    android:id="@+id/g_ajly"
                    android:layout_width="fill_parent"
                     style="@style/query_edit"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 style="@style/query_edit_parent" >

                <TextView
                    android:id="@+id/loginServerText"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="案件基本情況："
                     style="@style/query_edit_title">
                </TextView>

                <EditText
                    android:id="@+id/g_ajjbqk"
                    android:layout_width="fill_parent"
                    style="@style/query_edit"
                    android:minLines="3" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 style="@style/query_edit_parent">

                <TextView
                    android:id="@+id/loginServerText"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="案件处理意见："
                     style="@style/query_edit_title" >
                </TextView>

                <EditText
                    android:id="@+id/g_ajclyj"
                    android:layout_width="fill_parent"
                     style="@style/query_edit"
                    android:minLines="3" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/query_edit_parent" >

                <TextView
                    android:id="@+id/loginServerText"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="案件性质："
                     style="@style/query_edit_title">
                </TextView>

                <Spinner
                    android:id="@+id/g_ajxz"
                    android:entries="@array/wt_0"
                    android:layout_width="fill_parent"
                     style="@style/query_edit">
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 style="@style/query_edit_parent">

                <TextView
                    android:id="@+id/loginServerText"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="案件协办人："
                     style="@style/query_edit_title" >
                </TextView>

                <Spinner
                    android:entries="@array/wt_0"
                    android:id="@+id/g_xbrid"
                    android:layout_width="fill_parent"
                    style="@style/query_edit" >
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                 style="@style/query_btn_parent" >

                <Button
                    android:id="@+id/g_kscx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="录入"
                     style="@style/query_btn" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>