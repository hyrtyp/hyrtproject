<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_table_layout"
	android:layout_height="fill_parent"
	android:background="@drawable/background"
	android:layout_width="fill_parent"
>
	<RelativeLayout
		android:id="@+id/main_choice_top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/top1"
	>
		<TextView
		    style="@style/yangshi_title"
			android:text="检查记录"
			android:layout_centerInParent="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</RelativeLayout>
	<LinearLayout
		android:paddingLeft="10dip"
		android:paddingRight="10dip"
		android:paddingTop="20dip"
		android:paddingBottom="20dip"
		android:orientation="vertical"
		android:layout_below="@+id/main_choice_top"
		android:layout_height="fill_parent"
		android:weightSum="3"
		android:layout_width="fill_parent"
	>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_weight="1"
			android:weightSum="3"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
		>
			<LinearLayout
				android:gravity="center"
				android:orientation="vertical"
				android:layout_weight="1"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent"
			>
				<ImageView
					android:id="@+id/g_rcxc"
					android:layout_height="wrap_content"
					android:background="@drawable/b_a"
					android:layout_width="wrap_content" />
				<TextView
					android:padding="2dip"
					android:gravity="center"
					android:textSize="18sp"
					android:textColor="#4c4e4d"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="日常检查" />
			</LinearLayout>
			<LinearLayout
				android:gravity="center"
				android:orientation="vertical"
				android:layout_weight="1"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent"
			>
				<ImageView
					android:id="@+id/g_yxbl"
					android:layout_height="wrap_content"
					android:background="@drawable/b_e"
					android:layout_width="wrap_content" />
				<TextView
					android:padding="2dip"
					android:gravity="center"
					android:textSize="18sp"
					android:textColor="#4c4e4d"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="手机号补录" />
			</LinearLayout>
			<LinearLayout
				android:gravity="center"
				android:orientation="vertical"
				android:layout_weight="1"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent"
			>
				<ImageView
					android:id="@+id/g_wzwz"
					android:layout_height="wrap_content"
					android:background="@drawable/b_c"
					android:layout_width="wrap_content" />
				<TextView
					android:padding="2dip"
					android:gravity="center"
					android:textSize="18sp"
					android:textColor="#4c4e4d"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="无证无照" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_weight="1"
			android:weightSum="3"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
		>
			<LinearLayout
				android:gravity="center"
				android:orientation="vertical"
				android:layout_weight="1"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent"
			>
				<ImageView
					android:id="@+id/g_qyjc"
					android:layout_height="wrap_content"
					android:background="@drawable/b_d"
					android:layout_width="wrap_content" />
				<TextView
					android:padding="2dip"
					android:gravity="center"
					android:textSize="18sp"
					android:textColor="#4c4e4d"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="企业纠错" />
			</LinearLayout>
			<LinearLayout
				android:gravity="center"
				android:orientation="vertical"
				android:layout_weight="1"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent">
				<ImageView
				    android:visibility="gone"
					android:id="@+id/g_zxxc"
					android:layout_height="wrap_content"
					android:background="@drawable/b_e"
					android:layout_width="wrap_content" />
				<TextView
				     android:visibility="gone"
					android:padding="2dip"
					android:gravity="center"
					android:textSize="18sp"
					android:textColor="#4c4e4d"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="专项检查" />
			
			</LinearLayout>
			<LinearLayout
				android:gravity="center"
				android:orientation="vertical"
				android:layout_weight="1"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent"
			>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_weight="1"
			android:weightSum="3"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
		>
			<LinearLayout
				android:gravity="center"
				android:orientation="vertical"
				android:layout_weight="1"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent"
			>
			</LinearLayout>
			<LinearLayout
				android:gravity="center"
				android:orientation="vertical"
				android:layout_weight="1"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent"
			>
			</LinearLayout>
			<LinearLayout
				android:gravity="center"
				android:orientation="vertical"
				android:layout_weight="1"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent"
			>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
