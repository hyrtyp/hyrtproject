<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout
		android:id="@+id/gonggao_top"
		android:background="@drawable/top1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<ImageView 
		    android:id="@+id/gonggao_shuaxin" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/shuaxin"
		    android:layout_marginLeft="5dp"
		    android:visibility="gone"
		    android:layout_centerVertical="true"
		     />
		<TextView 
		   android:id="@+id/gonggao_center_tv"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:text="公告列表"
		   android:textSize="14sp"
		   android:textColor="#eef6f9"
		   android:layout_centerInParent="true"/>  
		<ImageView 
		   android:id="@+id/gonggao_back_iv"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:layout_alignParentRight="true"
		   android:layout_marginRight="5dp"
		   android:src="@drawable/back"
		   android:layout_centerVertical="true"/>   
	</RelativeLayout>
	<RelativeLayout 
	       android:id="@+id/gonggao_rl2"
	       android:layout_width="fill_parent"
	       android:layout_height="fill_parent"
	       android:layout_below="@id/gonggao_top"
	       android:background="#efffff">
	       <ListView 
	       android:id="@+id/gonggao_list" 
	       android:layout_width="fill_parent" 
	       android:layout_height="wrap_content"       
	       android:background="#efffff"
	       android:cacheColorHint="@null">
	 </ListView>
	</RelativeLayout>
	
	

</RelativeLayout>
