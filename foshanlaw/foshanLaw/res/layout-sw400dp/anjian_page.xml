<RelativeLayout
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background"
	android:orientation="vertical"
>

	<RelativeLayout
		android:id="@+id/top"
		android:layout_alignParentTop="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/top1"
		android:paddingLeft="15dip"
		android:paddingRight="15dip"
	>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="案件录入"
			android:textColor="#eef6f9"
			android:textSize="14sp" />
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@drawable/back" />
	</RelativeLayout>
	<ScrollView
		android:paddingTop="30dip"
		android:paddingBottom="30dip"
		android:layout_below="@+id/top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	><LinearLayout

			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
		>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dip"
			>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="任务编号："
					android:textColor="@color/black"
					android:textSize="14.0sp" />

				<EditText
					android:id="@+id/renwuid"
					android:layout_width="200.0dip"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
				>
				</EditText>
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dip"
			>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="@string/tv_company_code"
					android:textColor="@color/black"
					android:textSize="14.0sp" />

				<EditText
					android:id="@+id/qiyeid"
					android:layout_width="200.0dip"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:text="10000000003718"
				>
				</EditText>
			</RelativeLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dip"
			>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="企业名称："
					android:textColor="@color/black"
					android:textSize="14.0sp" />

				<EditText
					android:id="@+id/qiyename"
					android:layout_width="200.0dip"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
				>
				</EditText>
			</RelativeLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dip"
			>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="法定代表人："
					android:textColor="@color/black"
					android:textSize="14.0sp" />

				<EditText
					android:id="@+id/person"
					android:layout_width="200.0dip"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
				>
				</EditText>
			</RelativeLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dip"
			>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="手机："
					android:textColor="@color/black"
					android:textSize="14.0sp" />

				<EditText
					android:id="@+id/phone"
					android:layout_width="200.0dip"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
				>
				</EditText>
			</RelativeLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dip"
			>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="案件类型："
					android:textColor="@color/black"
					android:textSize="14.0sp" />

				<EditText
					android:id="@+id/casetype"
					android:layout_width="200.0dip"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
				>
				</EditText>
			</RelativeLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dip"
			>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="违法事实："
					android:textColor="@color/black"
					android:textSize="14.0sp" />

				<EditText
					android:id="@+id/weifa"
					android:layout_width="200.0dip"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
				>
				</EditText>
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dip"
			>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="立案人："
					android:textColor="@color/black"
					android:textSize="14.0sp" />

				<EditText
					android:id="@+id/lianren"
					android:layout_width="200.0dip"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
				>
				</EditText>
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dip"
			>

				<TextView
					android:id="@+id/textview666"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="是否采取强制措施："
					android:textColor="@color/black"
					android:textSize="14.0sp" />

				<RadioGroup
					android:layout_centerVertical="true"
					android:layout_marginLeft="10dip"
					android:layout_toRightOf="@+id/textview666"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="horizontal"
					android:id="@+id/iscompul"
					android:checkedButton="@+id/wlan"
				>
					<RadioButton
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:id="@+id/shi"
						android:text="是"
						android:textColor="#000000"
						android:layout_marginLeft="10dip"
						android:checked="true" />
					<RadioButton
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:id="@+id/fou"
						android:text="否"
						android:textColor="#000000"
						android:layout_marginLeft="10dip" />
				</RadioGroup>
			</RelativeLayout>


			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
			>

				<Button
					android:id="@+id/tj_bt"
					android:layout_width="100dip"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:background="@drawable/btn_bg"
					android:text="提交" />
			</RelativeLayout>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>