<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/full_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <com.esri.android.map.MapView
            android:id="@+id/arg_mapview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <com.hyrt.foshanLaw.b.SelectionView
            android:id="@+id/selectview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#00000000" />
    </FrameLayout>
    
     <Button android:background="@drawable/lock_unlock" android:layout_width="wrap_content" android:layout_marginLeft="20dip"
        	android:id="@+id/lock_btn" android:visibility="invisible"
	        android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_marginBottom="20dip"/>

</RelativeLayout>