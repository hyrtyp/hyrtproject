<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout
		android:id="@+id/info_top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/top1"
		android:paddingLeft="15dip"
		android:paddingRight="15dip"
		android:layout_alignParentTop="true">
		<ImageView
			android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/shezhi"
			android:layout_alignParentLeft="true"
			android:visibility="invisible"
			android:id="@+id/tjgl_sz" />
		<TextView
			android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="公告详情"
			android:textSize="14sp"
			android:textColor="#eef6f9"
			android:layout_centerInParent="true" />
		<ImageView
			android:id="@+id/infor_details_back"
			android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/back"
			android:layout_alignParentRight="true" />

	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/infor_detail_ll"
		android:layout_width="fill_parent"
		android:layout_below="@id/info_top"
		android:background="#efffff"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/infor_detail_tv_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:text="企业监管查询系统"
			android:textSize="20dp"
			android:textColor="#000000"
			android:layout_marginLeft="5dp" />
		<TextView
			android:id="@+id/tv__detail_publisher"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:layout_below="@id/infor_detail_tv_title"
			android:textSize="15dp"
			android:text="发布者系统管理员"
			android:layout_alignLeft="@id/infor_tv_title" />
		<TextView
			android:id="@+id/infor__detail_tv_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dp"
			android:textSize="15dp"
			android:singleLine="true"
			android:layout_marginLeft="10dp"
			android:gravity="right"
			android:layout_below="@id/infor_detail_tv_title"
			android:layout_alignTop="@id/tv_publisher"
			android:layout_toRightOf="@id/tv_publisher"
			android:text="发布日期:2012-10-08" />
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/infor_detail_rl2"
		android:layout_width="wrap_content"
		android:background="#efffff"
		android:layout_below="@id/infor_detail_ll"
		android:layout_height="fill_parent">
		<EditText
			android:id="@+id/infor_detail_edit"
			android:layout_width="fill_parent"
			android:background="@null"
			android:editable="false"
			android:layout_height="wrap_content" />
	</RelativeLayout>

</RelativeLayout>
